<!DOCTYPE html>
<html lang="en">
    <head>
        <title><%= title %></title>
        <% include meta %>
        <% include stylesheets %>
    </head>
    <body class="page-body  ">
        <div class="page-container horizontal-menu sidebar-collapsed">
           <% include header %>

           <div class="main-content row">
            <div class="login-content col-lg-4">
            <h3>Sign-in</h3><br>


            <form method="post" action="/signin" role="form" id="form_login" novalidate="novalidate">

                <div class="form-group ">

                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="entypo-user"></i>
                        </div>

                        <input type="text" class="form-control" name="email" id="email" placeholder="Email" autocomplete="off">
                    </div>

                </div>

                <div class="form-group">

                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="entypo-key"></i>
                        </div>

                        <input type="password" class="form-control" name="password" id="password" placeholder="Password" autocomplete="off">
                    </div>

                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block btn-login">
                        <i class="entypo-login"></i>
                        Sign-in
                    </button>
                </div>

                                <div class="form-group">
                    <em>- or -</em>
                </div>

                <div class="form-group">

                    <button type="button" class="btn btn-default btn-lg btn-block btn-icon icon-left facebook-button">
                        Sign-in with Facebook
                        <i class="entypo-facebook"></i>
                    </button>

                </div>


            </form>


            <div class="login-bottom-links">

                <a href="http://demo.neontheme.com/extra/forgot-password/" class="link">Forgot your password?</a>

                <br>

                <a href="#">ToS</a>  - <a href="#">Privacy Policy</a>

            </div>

        </div>
           </div>

           <% include footer %>
           <% include scripts %>
       </div>
    </body>
</html>

