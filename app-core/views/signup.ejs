<% include header %>
<div class="container-fluid" id="main-content">
  <div class="panel-heading"><h3><%= title %></h3></div>
  <div class="row padding-sm">
    <div class="col-sm-4">
      <div class="panel-body">
        <form method="post" action="/signin" >
          <fieldset>
            <div class="form-group">
              <label for="exampleInputEmail">Username</label>
              <input type="text" class="form-control" name="uname" placeholder="Enter email">
            </div>
            <div class="form-group">
              <label for="exampleInputEmail">Email address</label>
              <input type="text" class="form-control" name="uemail" placeholder="Enter email">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword">Password</label>
              <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary">Submit <span class="glyphicon glyphicon-arrow-right"></button>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
</div>
<% include footer %>